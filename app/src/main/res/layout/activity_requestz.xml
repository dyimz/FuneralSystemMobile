<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".RequestzActivity">

    <!-- Center area -->
    <View
        android:id="@+id/centerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <!-- First square button (top-left) -->
    <Button
        android:id="@+id/button1"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:background="#FF4081"
        android:text="Request For Pickup"
        android:textColor="#FFFFFF"
        android:layout_above="@id/centerView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp" />

    <!-- Second square button (top-right) -->
    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:background="#4CAF50"
        android:text="Request For Conveyance"
        android:textColor="#FFFFFF"
        android:layout_above="@id/centerView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Third square button (bottom-left) -->
    <Button
        android:id="@+id/button3"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:background="#2196F3"
        android:text="Request For Death Certificate"
        android:textColor="#FFFFFF"
        android:layout_below="@id/centerView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Fourth square button (bottom-right) -->
    <Button
        android:id="@+id/button4"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:background="#FFC107"
        android:text="Apply For Assistance"
        android:textColor="#FFFFFF"
        android:layout_below="@id/centerView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
