<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
    tools:context=".ExtendorderActivity">

        <TextView
            android:id="@+id/formalinDaysLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Days of Formalin Extend"/>

        <EditText
            android:id="@+id/formalinDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="quantity"
            android:inputType="number"
            android:padding="8dp" />

    <TextView
        android:id="@+id/standingFlowersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standing Flowers"/>

    <EditText
        android:id="@+id/standingFlowers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />


    <TextView
        android:id="@+id/lightsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lights"/>

    <EditText
        android:id="@+id/lights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/candleStandLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candle Stand"/>

    <EditText
        android:id="@+id/candleStand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/flooringFlowersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flooring Flowers"/>

    <EditText
        android:id="@+id/flooringFlowers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/crossLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cross"/>

    <EditText
        android:id="@+id/cross"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/tarpaulinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarpaulin"/>

    <EditText
        android:id="@+id/tarpaulin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/curtainsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Curtains"/>

    <EditText
        android:id="@+id/curtains"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/candlesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Candles"/>

    <EditText
        android:id="@+id/candles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

    <TextView
        android:id="@+id/balloonsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balloons"/>

    <EditText
        android:id="@+id/balloons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity"
        android:inputType="number"
        android:padding="8dp" />

        <Button
            android:id="@+id/extendOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="Extend Order" />

    </LinearLayout>
</ScrollView>