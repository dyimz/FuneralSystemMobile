<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/productinfobg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:context=".ProductinfoActivity">



            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/pikeslogo"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text=""
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_marginTop="27dp"
                android:textColor="@color/white"
                android:layout_below="@id/productImage"/>

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@id/nameLabel"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/stocksLabel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/priceLabel"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Product Details "
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:layout_below="@id/stocksLabel" />

            <TextView
                android:id="@+id/descriptionLabel"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/Label"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/sizeLabel"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/descriptionLabel"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/capacityLabel"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/sizeLabel"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/weightLabel"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/capacityLabel"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>
            <!--            <TextView-->
            <!--                android:id="@+id/Label"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text=" Approximate Product Details "-->
            <!--                android:textSize="20sp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:layout_marginTop="15dp"-->
            <!--                android:layout_below="@id/descriptionLabel"-->
            <!--                android:layout_centerHorizontal="true" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/detailsLabel"-->
            <!--                android:layout_width="250dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text=""-->
            <!--                android:textSize="15sp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:layout_marginBottom="140dp"-->
            <!--                android:layout_below="@id/Label"-->
            <!--                android:layout_centerHorizontal="true"-->
            <!--                android:gravity="center"/>-->

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/AddToCart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="90dp"
        android:text="Add to Cart"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


